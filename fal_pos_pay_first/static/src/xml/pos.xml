<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- First line of denfence
        Non manager should not be able to print -->
    <t t-extend="PaymentScreenWidget">
        <t t-jquery=".button.next" t-operation="attributes">
            <attribute name="t-if">widget.pos.user.role == 'manager'</attribute>
        </t>
        <t t-jquery=".button.next" t-operation="after">
            <span class='button paidnorder' t-if="widget.pos.user.role != 'manager'">
                Bill &amp; Order
            </span>
        </t>
    </t>

</templates>
