<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- First line of denfence
        Non manager should not be able to print -->
    <t t-extend="PaymentScreenWidget">
        <t t-jquery=".button.next" t-operation="attributes">
            <attribute name="t-if">widget.pos.user.role == 'manager' or (widget.pos and widget.pos.get_order() and widget.pos.get_order().bill_locked or False)</attribute>
        </t>
        <t t-jquery=".button.next" t-operation="after">
            <span class='button paidnorder' t-if="widget.pos.user.role != 'manager' and (widget.pos and widget.pos.get_order() and !widget.pos.get_order().bill_locked or False)">
                Bill &amp; Order
            </span>
        </t>
    </t>

    <t t-name="openBillScreenWidget">
        <div class='control-button'>
            <i class='fa fa-unlock-alt' /> Un/lock
        </div>
    </t>

</templates>
